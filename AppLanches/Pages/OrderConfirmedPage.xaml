<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLanches.Pages.OrderConfirmedPage"
             Title="OrderConfirmedPage">

    <VerticalStackLayout
      VerticalOptions="CenterAndExpand"
         HorizontalOptions="CenterAndExpand"
         Padding="20">

        <Image Source="confirmado.gif"
               HeightRequest="300" 
               WidthRequest="300"
            Aspect="AspectFit" />

        <Label Text="Seu pedido foi confirmado!"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand" 
               TextColor="DarkBlue"   
               Margin="0,20,0,0" />

        <Button Text="Retornar"
             FontAttributes="Bold"
             HorizontalOptions="Center" 
                x:Name="BtnReturn"  
                Clicked="BtnReturn_Clicked"
             VerticalOptions="CenterAndExpand" />
        
    </VerticalStackLayout>
    
</ContentPage>